<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <a class="be-redy" href="/">BE-REDY</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Sign Up</h2>
        <form class="signup">
          <div class="form-group">
            <input type="email" class="form-control" id="email-input" placeholder="EMAIL">
          </div>
          <div class="form-group">
            <input type="password" class="form-control formMargin" id="password-input" placeholder="PASSWORD">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button id="form-button" type="submit" class="btn btn-default signup-button">Sign Up</button>
        </form>
        <br />
        <p>Or log in <a href="/login">here</a></p>
      </div>
    </div>
  </div>
</body>
