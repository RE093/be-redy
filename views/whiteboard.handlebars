  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
        <button id="new-post">Insert new post-it!</button>
      </div>
    </div>
      {{#each stickyNote}}
        <div id="{{ this.id }}" class="draggable" onmouseleave="sendTextData(this)" style="transform: translate({{ this.xCoord }}px, {{ this.yCoord }}px);" data-x="{{ this.xCoord }}" data-y="{{ this.yCoord }}">
          <p class="textContent" contentEditable="true"> {{ this.noteText }} </p>
        </div>
      {{/each}}
  </div>
  <script>
      function sendTextData(data) {

        let allData = {
          noteText: data.children[0].innerHTML,
          id: data.id,
          xCoord: data.dataset.x,
          yCoord: data.dataset.y
        };

        $.ajax({
          method: "PUT",
          url: "/api/notes",
          data: allData,
        }).then((data) => {
          location.reload();
        });

      }
  </script>
